- content_for :title, "新規登録"

.row.justify-content-center
  .col-md-6.col-lg-4
    .card
      .card-header.bg-success.text-white
        %h4.mb-0
          %i.fas.fa-user-plus.me-2
          新規登録

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        .card-body
          <%= render "devise/shared/error_messages", resource: resource %>

          .mb-3
            <%= f.label :email, "メールアドレス", class: "form-label required" %>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>

          .mb-3
            <%= f.label :password, "パスワード", class: "form-label required" %>
            <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
            .form-text
              <% if @minimum_password_length %>
                最低<%= @minimum_password_length %>文字
              <% end %>

          .mb-3
            <%= f.label :password_confirmation, "パスワード（確認）", class: "form-label required" %>
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>

        .card-footer.bg-light
          .d-grid
            <%= f.submit "新規登録", class: "btn btn-success" %>
      <% end %>

    .text-center.mt-3
      <%= render "devise/shared/links" %>
